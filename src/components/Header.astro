---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
	<nav>
		<HeaderLink href="#kijkgat">Kijkgat</HeaderLink>
		<HeaderLink href="#ervaar">Ervaar</HeaderLink>
		<HeaderLink href="#contact">Contact</HeaderLink>
		<HeaderLink href="#niet">Wat is het niet</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		border-bottom: 0.4rem solid black;
	}
	nav {
		display: flex;
		padding-top: 1em;
		padding-bottom: 1em;
		justify-content: flex-end;
	}
	@media screen and (max-width: 768px) {
		nav {
			flex-direction: column;
			align-items: center;
			justify-content: space-between;
		}
	}
</style>
