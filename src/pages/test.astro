<style>
  body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
  }

  #camera-container {
    position: relative;
    overflow: hidden;
    border-radius: 50%;
    width: 300px; /* Adjust the size as needed */
    height: 300px; /* Adjust the size as needed */
  }

  #camera-view {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }
</style>

<div id="camera-container">
  <button id="activateCamera">Try it out</button>
  <video id="camera-view" autoplay playsinline></video>
</div>

<script>
  // JavaScript to access the camera and stream it to the video element
  async function initCamera() {
    try {
      const stream = await navigator.mediaDevices.getUserMedia({
        video: true,
      });
      const videoElement = document.getElementById("camera-view");
      videoElement.srcObject = stream;
    } catch (error) {
      console.error("Error accessing the camera:", error);
    }
  }

  document
    .getElementById("activateCamera")
    .addEventListener("click", initCamera);
</script>
